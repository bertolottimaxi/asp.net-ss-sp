@{
    ViewBag.Title = "Buscar";
    Layout = null;
}
<!DOCTYPE=html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <link href="~/Content/Mis estilos/TablaInformación.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">



</head>

<body>

    @using (Html.BeginForm())
    {

        <div class="input-group col-md-4" style="margin-top: 5em;margin-left: 5em;width:30em">
            <button type="submit">Buscar</button>
            <input type="text" name="buscando" class="form-control rounded" placeholder="Buscar según..." aria-label="buscar por..." />
            <div class="dropdown">
                <select name="criterio" style="height: 3em;text-align: center">
                    <option value="DNI" class="opción">DNI</option>
                    <option value="Nombre y Apellido" class="opción">Nombre y Apellido</option>
                </select>
            </div>
        </div>
    }

        <table className='table'>
            <thead>
                <tr>
                    <th scope="col">DNI</th>
                    <th scope="col">NOMBRE Y APELLIDO</th>
                    <th />
                </tr>
            </thead>
            <tbody>
                @foreach (var agente in ViewBag.Lista)
                {
                    <tr>
                        <td>
                            @agente.Dni
                        </td>
                        <td>
                            @agente.NombreyApellido
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </body>
</html>